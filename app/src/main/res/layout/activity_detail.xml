<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">

    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/navbar_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <androidx.cardview.widget.CardView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/card_view"
                    android:layout_alignParentTop="true"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    app:cardCornerRadius="20dp"
                    android:background="@color/primary_color">
                    <ImageView
                        android:id="@+id/poster_book"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        app:srcCompat="@drawable/book" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/title_book"
                    android:layout_below="@id/card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/dosis"
                    android:textFontWeight="800"
                    android:textSize="20dp"
                    android:singleLine="true"
                    android:text="Tôi thấy hoa vàng trên cỏ xanh"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/author_book"
                    android:layout_below="@id/title_book"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/dosis"
                    android:textFontWeight="500"
                    android:text="Nguyễn Nhật Ánh"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>
            <RelativeLayout
                android:paddingHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:fontFamily="@font/dosis"
                        android:textFontWeight="500"
                        android:text="Thể Loại"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:fontFamily="@font/dosis"
                        android:textFontWeight="800"
                        android:text="Truyện Chữ"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:fontFamily="@font/dosis"
                        android:textFontWeight="500"
                        android:text="Số Chương"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:fontFamily="@font/dosis"
                        android:textFontWeight="800"
                        android:text="12"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:fontFamily="@font/dosis"
                        android:textFontWeight="500"
                        android:text="Lượt Xem"/>
                    <TextView
                        android:id="@+id/view_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:fontFamily="@font/dosis"
                        android:textFontWeight="800"
                        android:text="150"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/description_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:fontFamily="@font/dosis"
                    android:textFontWeight="500"
                    android:text=""/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/navbar_detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/back_button"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/icon_left_arrow"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/read_first_button_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bottom_panel_round_top_left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/text_color_white"
                    android:fontFamily="@font/dosis"
                    android:textFontWeight="600"
                    android:textSize="20dp"
                    android:text="ĐỌC CHƯƠNG 1"/>
            </RelativeLayout>

    </LinearLayout>


</RelativeLayout>